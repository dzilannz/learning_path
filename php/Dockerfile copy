# Menggunakan image PHP dengan FPM
FROM php:8.2-fpm

# Membersihkan cache dan memperbarui repositori
RUN apt-get clean && apt-get update && apt-get install -y --fix-missing \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    zip \
    git \
    unzip \
    && apt-get clean

# Instalasi ekstensi PHP (misalnya untuk GD, PDO, dan MySQL)
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd pdo pdo_mysql

# Install Composer (untuk manajemen dependensi PHP)
RUN curl -sS https://getcomposer.org/installer | php \
    && mv composer.phar /usr/local/bin/composer

# Set root directory aplikasi
WORKDIR /var/www

# Salin file aplikasi ke dalam container
COPY . /var/www

# Install dependensi Laravel menggunakan Composer
# RUN composer install --optimize-autoloader --no-dev

# Ubah kepemilikan direktori untuk memastikan file bisa ditulis oleh PHP
# RUN chown -R www-data:www-data /var/www

# Set permission untuk direktori storage dan bootstrap/cache
# RUN chmod -R 775 /var/www/storage /var/www/bootstrap/cache

# Expose port 433 (yang Anda tentukan di docker-compose)
EXPOSE 433


